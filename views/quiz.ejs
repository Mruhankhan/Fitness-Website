<body>
  <div id="main">
    <h1 id="title">Health Quiz</h1>
    <form action="/quiz" method="POST">
      <div class="mb-3 card backing-box">
        <div class="card text-dark bg-light mb-3">
          <div class="card-body">
            <h5 classs="card-title" id="mentald">How much have you mentald in the past 12 months?</h5>
            <input type="radio" value=0 id="exercise-question-0" name="exercise-question">
            <label for="exercise-question-0" >never</label><br>
            <input type="radio" value=1 id="exercise-question-1" name="exercise-question">
            <label for="exercise-question-1">1 time a week</label><br>
            <input type="radio" value=2 id="exercise-question-2" name="exercise-question">
            <label for="exercise-question-2">2 to 3 times a week</label><br>
            <input type="radio" value=3 id="exercise-question-3" name="exercise-question">
            <label for="exercise-question-3">more than 4 times a week</label><br>
          </div>
        </div>
      </div>


      <div class="mb-3 card backing-box">
        <div class="card text-dark bg-light mb-3">
          <div class="card-body">
            <h5 classs="card-title">How much have you engaged in mental activity in the past 12 months?</h5>
            <input type="radio" value=0 id="mental-question-0" name="mental-question">
            <label for="mental-question-0">never</label><br>
            <input type="radio" value=1 id="mental-question-1" name="mental-question">
            <label for="mental-question-1">1 time a week</label><br>
            <input type="radio" value=2 id="mental-question-2" name="mental-question">
            <label for="mental-question-2">2 to 3 times a week</label><br>
            <input type="radio" value=3 id="mental-question-3" name="mental-question">
            <label for="mental-question-3">more than 4 times a week</label><br>
          </div>
        </div>
      </div>


      <div class="mb-3 card backing-box">
        <div class="card text-dark bg-light mb-3">
          <div class="card-body">
            <h5 classs="card-title">How often do you drink alcohol?</h5>
            <input type="radio" value=0 id="alcohol-question-0" id="alcohol-question" name="alcohol-question">
            <label for="alcohol-question-0">never</label><br>
            <input type="radio" value=1 id="alcohol-question-1" name="alcohol-question">
            <label for="alcohol-question-1">once a month</label><br>
            <input type="radio" value=2 id="alcohol-question-2" name="alcohol-question">
            <label for="alcohol-question-2">2 to 4 times a month</label><br>
            <input type="radio" value=3 id="alcohol-question-3" name="alcohol-question">
            <label for="alcohol-question-3">2 to 3 times a week</label><br>
            <input type="radio" value=4 id="alcohol-question-3" name="alcohol-question">
            <label for="alcohol-question-3">4 times a week and more</label><br>
          </div>
        </div>
      </div>


      <div class="mb-3 card backing-box">
        <div class="card text-dark bg-light mb-3">
          <div class="card-body">
            <h5 classs="card-title">Do you smoke regularly?</h5>
            <input type="radio" value=0 id="smoke-question-0" name="smoke-question">
            <label for="smoke-question-0">no</label><br>
            <input type="radio" value=1 id="smoke-question-1" name="smoke-question">
            <label for="smoke-question-1">yes, sometimes</label><br>
            <input type="radio" value=2 id="smoke-question-2" name="smoke-question">
            <label for="smoke-question-2">yes, regularly</label><br>
          </div>
        </div>
      </div>



      <div class="mb-3 card backing-box">
        <div class="card text-dark bg-light mb-3">
          <div class="card-body">
            <h5 classs="card-title">How regular are you social interactions</h5>
            <input type="radio" value=0 id="social-question-0" name="social-question">
            <label for="social-question-0">very regular</label><br>
            <input type="radio" value=1 id="social-question-1" name="social-question">
            <label for="social-question-1">regular</label><br>
            <input type="radio" value=2 id="social-question-2" name="social-question">
            <label for="social-question-2">somewhat regular</label><br>
            <input type="radio" value=3 id="social-question-3" name="social-question">
            <label for="social-question-3">not regular</label><br>
            <input type="radio" value=4 id="social-question-4" name="social-question">
            <label for="social-question-4">somewhat irregular</label><br>
            <input type="radio" vlaue=5 id="social-question-5" name="social-question">
            <label for="social-question-5">very irregular</label><br>
          </div>
        </div>
      </div>
      <div class="mb-3 card backing-box">
        <div class="card text-dark bg-light mb-3">
          <div class="card-body">
            <h5 classs="card-title">How often do you go outside</h5>
            <input type="radio" value=0 id="going-outside-question-0" name="outside-question">
            <label for="going-outside-0">never</label><br>
            <input type="radio" value=1 id="going-outside-question-1" name="outside-question">
            <label for="going-outside-1">once a month</label><br>
            <input type="radio" value=2 id="going-outside-question-2" name="outside-question">
            <label for="going-outside-2">2 to 4 times a month</label><br>
            <input type="radio" value=3 id="going-outside-question-3" name="outside-question">
            <label for="going-outside-4">2 to 3 times a week</label><br>
            <input type="radio" value=4 id="going-outside-question-4" name="outside-question">
            <label for="going-outside-5">4 times a week and more</label><br>
